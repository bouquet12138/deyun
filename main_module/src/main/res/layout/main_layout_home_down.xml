<?xml version="1.0" encoding="utf-8"?><!--下面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <!--公司业务-->
    <LinearLayout
        android:id="@+id/companyBusiness"
        style="@style/main_home_bt">

        <ImageView
            style="@style/main_drawable_style"
            android:background="@drawable/main_back_d"
            android:src="@drawable/main_business" />

        <TextView
            style="@style/main_text_style"
            android:text="公司业务" />

    </LinearLayout>

    <!--App推广-->
    <LinearLayout
        android:id="@+id/popularize_app"
        style="@style/main_home_bt">

        <ImageView
            style="@style/main_drawable_style"
            android:background="@drawable/main_back_h"
            android:src="@drawable/main_popularize_app" />

        <TextView
            style="@style/main_text_style"
            android:text="APP推广" />

    </LinearLayout>

    <!--客户中心-->
    <LinearLayout
        android:id="@+id/user_center"
        style="@style/main_home_bt">

        <ImageView

            style="@style/main_drawable_style"
            android:background="@drawable/main_back_e"
            android:src="@drawable/main_service" />

        <TextView
            style="@style/main_text_style"
            android:text="客服中心" />

    </LinearLayout>


    <!--关于我们-->
    <LinearLayout
        android:id="@+id/about_us"
        style="@style/main_home_bt">

        <ImageView

            style="@style/main_drawable_style"
            android:background="@drawable/main_back_f"
            android:padding="5dp"
            android:src="@drawable/main_about_us" />

        <TextView
            style="@style/main_text_style"
            android:text="关于我们" />

    </LinearLayout>


</LinearLayout>