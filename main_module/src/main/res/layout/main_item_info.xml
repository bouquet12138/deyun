<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.layout.QMUILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_rectangle"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/describeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/app_dark_text_color"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/myGridLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:qmui_border_width="0dp" />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:qmui_border_width="0dp" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:qmui_border_width="0dp" />

            <LinearLayout
                android:id="@+id/imageGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#7000"
                android:gravity="center_vertical"
                android:padding="3dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_marginLeft="2dp"
                    android:layout_height="15dp"
                    android:src="@drawable/white_pic" />

                <TextView
                    android:id="@+id/imageSizeText"
                    android:layout_width="25dp"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="12dp" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/dateAndReadVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/app_light_text_color"
        android:textSize="12dp" />


</com.qmuiteam.qmui.layout.QMUILinearLayout>



