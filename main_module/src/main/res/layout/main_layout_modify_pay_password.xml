<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:padding="5dp"
        android:text="支付密码只能是6位数字"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout style="@style/personInfoBackGroundStyle">

        <TextView
            style="@style/personalInfoTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旧密码:  " />


        <EditText
            android:id="@+id/oldPasswordEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入旧支付密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:maxLines="1"
            android:padding="5dp"
            android:textColorHint="#ccc"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/oldPasswordBt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/close" />


    </LinearLayout>


    <!--提示-->
    <TextView
        android:id="@+id/oldPasswordHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="#F71414"
        android:textSize="14dp" />

    <LinearLayout
        style="@style/personInfoBackGroundStyle"
        android:layout_marginTop="0dp">

        <TextView
            style="@style/personalInfoTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码:  " />


        <EditText
            android:id="@+id/newPasswordEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入新支付密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:maxLines="1"
            android:padding="5dp"
            android:textColorHint="#ccc"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/newPasswordBt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/close" />

    </LinearLayout>

    <!--提示-->
    <TextView
        android:id="@+id/newPasswordHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="#F71414"
        android:textSize="14dp" />

    <LinearLayout
        style="@style/personInfoBackGroundStyle"
        android:layout_marginTop="0dp">

        <TextView
            style="@style/personalInfoTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认新密码:  " />


        <EditText
            android:id="@+id/confirmPasswordEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请确认新支付密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:maxLines="1"
            android:padding="5dp"
            android:textColorHint="#ccc"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/confirmPasswordBt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/close" />


    </LinearLayout>


    <!--提示-->
    <TextView
        android:id="@+id/confirmPasswordHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="#F71414"
        android:textSize="14dp" />

</LinearLayout>